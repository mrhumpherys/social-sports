
<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="row">
                <div class="col-12 d-flex justify-content-between g-0">
                    <div>
                        <h1 class="page-title">{{render_team_name game.away_team_id}} -VS- {{render_team_name game.home_team_id}}</h1>
                    </div>
                    <div><a href="#" class="btn btn-primary">upvote</a></div>

                </div>
            </div>
            <div class="row ">
                <div class="col-12 single-game">
                    <div class="row">
                        <div class="col d-flex align-items-center justify-content-center">
                            <div class="text-center">
                                <img src="{{render_team_logo game.away_team_id}}" alt="{{render_team_name game.away_team_id}}"
                                    class="img-fluid">
                                <h4 class="mt-2">20 - 14</h4>
                            </div>
                        </div>
                        <div class="col-5 text-center d-flex align-items-center justify-content-center">
                            <h3 class="score d-flex justify-content-center align-items-center">{{game.away_team_score}} <span class="time">Q{{game.quarter}}<br/ >
                                    {{game.time_remaining_minutes}}:{{game.time_remaining_seconds}}</span> {{game.home_team_score}} </h3>
                        </div>
                        <div class="col d-flex align-items-center justify-content-center">
                            <div class="text-center">
                                <img src="{{render_team_logo game.home_team_id}}" alt="{{render_team_name game.home_team_id}}"
                                    class="img-fluid">
                                <h4 class="mt-2">20 - 14</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="page-section game-info bg-mid">
                                <h3>GAME INFO</h3>
                                <p>No info to show at this time, please check back again for an update.</p>
                            </div>
                        </div>
                    </div>

                   <!-- {{> comments game.comments}} -->

                </div>
                <!--end single game-->
            </div>
        </div>
    </div>
</div>